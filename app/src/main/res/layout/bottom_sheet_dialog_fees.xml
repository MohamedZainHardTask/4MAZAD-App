<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/popup_dash" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/toBidAuction"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView33" />

    <LinearLayout
        android:id="@+id/bottom_sheet_dialog_fees_ll_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView45"
        app:layout_constraintStart_toStartOf="@+id/textView45"
        app:layout_constraintTop_toBottomOf="@+id/textView45">

        <TextView
            android:id="@+id/bottom_sheet_dialog_fees_tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="220.000 "
            android:textColor="@color/red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bottom_sheet_dialog_fees_tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_medium"
            android:text="KWD"
            android:textColor="@color/red"
            android:textSize="18sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/bottom_sheet_dialog_fees_tv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/small_btn"
        android:fontFamily="@font/raleway_semibold"
        android:gravity="center"
        android:text="@string/pay"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_dialog_fees_ll_cost"
        app:layout_constraintStart_toStartOf="@+id/bottom_sheet_dialog_fees_ll_cost"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_dialog_fees_ll_cost" />
</androidx.constraintlayout.widget.ConstraintLayout>